    }
}

/* Clinic Status Component */
.clinic-status {
    font-weight: 600;
    padding: 1.5rem 2rem;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 1rem auto;
    position: relative;
    min-width: 300px;
    max-width: 90%;
    transition: all 0.3s ease;
}

/* Open state - Solid Green */
.clinic-status.open {
    background-color: #15803d; /* Deep green */
    color: white;
    box-shadow: 0 4px 15px rgba(21, 128, 61, 0.3);
}

.clinic-status.open #status-message {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.clinic-status.open #next-opening {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    font-weight: 500;
}

/* Closed state - Solid Red */
.clinic-status.closed {
    background-color: #b91c1c; /* Deep red */
    color: white;
    box-shadow: 0 4px 15px rgba(185, 28, 28, 0.3);
}

.clinic-status.closed #status-message {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.clinic-status.closed #next-opening {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-weight: 500;
    background: rgba(0, 0, 0, 0.15);
    padding: 0.75rem 1rem;
    border-radius: 8px;
    width: 100%;
    text-align: center;
}

/* Soon state (using red since clinic is not yet open) */
.clinic-status.soon {
    background-color: #b91c1c;
    color: white;
    box-shadow: 0 4px 15px rgba(185, 28, 28, 0.3);
}

[data-theme="dark"] .clinic-status.soon {
    background-color: #991b1b;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .clinic-status {
        padding: 1.25rem 1.5rem;
        min-width: 280px;
    }
    
    .clinic-status #status-message {
        font-size: 1.1rem;
    }
    
    .clinic-status #next-opening {
        font-size: 0.9rem;
    }
}

/* High contrast mode */
@media (prefers-contrast: high) {
    .clinic-status.open {
        border: 2px solid #fff;
    }
    
    .clinic-status.closed,
    .clinic-status.soon {
        border: 2px solid #fff;
    }
}

/* Services Section Styling */
.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
}

.service-card {
    background: var(--background-card);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-md);
    padding: 2rem;
    text-align: center;
    transition: var(--transition-smooth);
}

.service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
}

.service-card i {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.service-card h3 {
    color: var(--text-primary);
    margin: 1rem 0;
}

.service-card p {
    color: var(--text-secondary);
}

/* Hero Section */
.hero-section {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: var(--text-on-primary);
    border-radius: var(--border-radius-lg);
    margin-bottom: 3rem;
}

.hero-content {
    max-width: 800px;
    margin: 0 auto;
}

.hero-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
}

.cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--accent-color);
    color: var(--text-on-accent);
    border-radius: var(--border-radius-full);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition-smooth);
    margin-top: 2rem;
}

.cta-button:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

/* Section Headers */
section h2 {
    text-align: center;
    color: var(--text-primary);
    margin-bottom: 2rem;
    font-size: 2rem;
}

/* Forms --- START OF REVISED FORM STYLES --- */
form {
  background-color: transparent; 
  padding: 0; 
  width: 100%;
  margin: 0 auto;
}

form label {
  display: block;
  margin-bottom: calc(var(--spacing-unit) * 2); /* 0.5rem */
  font-weight: 500;
  color: var(--text-secondary);
  font-size: 0.875rem; /* 14px */
  line-height: 1.5;
}

form input,
form select,
form textarea { /* Added textarea for completeness */
  width: 100%;
  padding: calc(var(--spacing-unit) * 3.5) calc(var(--spacing-unit) * 4); /* 0.875rem 1rem */
  margin-bottom: calc(var(--spacing-unit) * 6); /* 1.5rem */
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  background-color: var(--background-input);
  transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  font-family: inherit;
  color: var(--text-primary);
  font-size: 1rem;
  /* Removed --shadow-inner for a flatter, more modern look */
}

form input::placeholder,
form textarea::placeholder {
  color: transparent;
}

form input:hover,
form select:hover,
form textarea:hover {
  border-color: rgba(var(--primary-rgb), 0.5); /* Or var(--text-secondary) if preferred */
}

form input:focus,
form select:focus,
form textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.15); /* Softer focus ring */
}

form select {
  /* appearance: none; */ /* Keep default arrow for now for simplicity */
  cursor: pointer;
}

form button[type="submit"] {
  background: var(--primary-color);
  color: var(--text-on-primary);
  border: none;
  padding: calc(var(--spacing-unit) * 3.5) calc(var(--spacing-unit) * 8); /* approx 0.875rem 2rem */
  border-radius: var(--border-radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: background-color var(--transition-smooth), transform var(--transition-fast), box-shadow var(--transition-smooth);
  display: block; 
  width: 100%;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.075em; 
  box-shadow: var(--shadow-sm);
  text-align: center;
}

form button[type="submit"]:hover,
form button[type="submit"]:focus {
  background: var(--primary-dark);
  transform: translateY(-3px); 
  box-shadow: var(--shadow-md); 
  outline: none;
}

form button[type="submit"]:active {
  transform: translateY(-1px); 
  background: var(--primary-dark); 
  box-shadow: var(--shadow-inner); 
}
/* --- END OF REVISED FORM STYLES --- */


/* Popup Styles */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(15, 23, 42, 0.6); /* Dark overlay (e.g., slate-900 with alpha) */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--transition-smooth), visibility 0s var(--transition-smooth); /* Delay visibility hide */
}
.popup-overlay.active {
  opacity: 1;
  visibility: visible;
  transition-delay: 0s;
}
[data-theme="dark"] .popup-overlay {
    background-color: rgba(0,0,0,0.7);
}


.popup-content {
  background-color: var(--background-elevated);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-xl);
  padding: 1.5rem;
  width: 90%;
  max-width: 480px;
  position: relative;
  transform: scale(0.95) translateY(10px);
  opacity: 0;
  transition: transform var(--transition-smooth), opacity var(--transition-smooth);
  direction: rtl;
  text-align: right;
  max-height: 90vh;
  overflow-y: auto;
}
.popup-overlay.active .popup-content {
  transform: scale(1) translateY(0);
  opacity: 1;
}

.close-popup {
  position: absolute;
  top: 0.75rem;
  left: 1rem; /* RTL */
  font-size: 1.75rem;
  line-height: 1;
  font-weight: bold;
  cursor: pointer;
  color: var(--text-secondary);
  transition: color var(--transition-fast), transform var(--transition-fast);
  background: none;
  border: none;
  padding: 0.25rem;
}
.close-popup:hover,
.close-popup:focus {
  color: var(--accent-dark);
  transform: scale(1.1);
  outline: none;
}

#appointment-details {
  margin: 1.5rem 0;
  padding: 1rem;
  background-color: rgba(var(--primary-rgb), 0.05);
  border-radius: var(--border-radius-md);
  border-right: 3px solid var(--primary-color); /* RTL */
}
#appointment-details p {
  margin-bottom: 0.5rem;
  font-size: 0.95rem;
}
#appointment-details strong {
  color: var(--text-primary);
  font-weight: 500;
}

.thank-you-message {
  font-size: 1.1em;
  text-align: center;
  margin-top: 1.5rem;
  color: var(--accent-color);
  font-weight: 600;
}

/* Success Message (e.g., for non-popup notifications) */
.success-message {
  padding: 1rem 1.5rem;
  margin: 1rem 0;
  background-color: rgba(var(--accent-rgb), 0.1);
  border-right: 3px solid var(--accent-color); /* RTL */
  border-radius: var(--border-radius-md);
  color: var(--accent-dark);
  font-weight: 500;
  text-align: center;
}

/* Dropdown Menu Styles */
.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    right: 0;
    min-width: 200px;
    background: var(--background-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-lg);
    z-index: 1000;
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.2s ease, transform 0.2s ease;
}

.dropdown-menu.show {
    display: block;
    opacity: 1;
    transform: translateY(0);
}

.dropdown-menu li {
    padding: 0;
    margin: 0;
    list-style: none;
}

.dropdown-menu a {
    display: block;
    padding: 0.75rem 1rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
}

.dropdown-menu a:hover {
    background-color: var(--primary-color);
    color: white !important;
    transform: translateX(5px);
}

/* Adjust caret icon */
.dropdown a i.fa-caret-down {
    margin-right: 0.5rem;
    transition: transform 0.2s ease;
}

.dropdown a[aria-expanded="true"] i.fa-caret-down {
    transform: rotate(180deg);
}

/* Dark mode adjustments */
[data-theme="dark"] .dropdown-menu {
    background: var(--dark-surface);
    border-color: var(--dark-border);
}

[data-theme="dark"] .dropdown-menu a {
    color: var(--dark-text);
}

[data-theme="dark"] .dropdown-menu a:hover {
    background-color: var(--primary-color);
    color: white !important;
}

/* Mobile adjustments */
@media (max-width: 768px) {
    .dropdown-menu {
        position: static;
        width: 100%;
        box-shadow: none;
        border: none;
        background: transparent;
        margin-right: 1rem;
    }

    .dropdown-menu a {
        padding-right: 2rem;
    }
}
/* Mobile Dropdown Specifics */
.dropdown-menu { /* This is the <ul> for dropdown items */
  display: none; /* Controlled by JS via .show */
  width: 100%;
  background-color: rgba(0,0,0,0.02); /* Subtle differentiation */
  padding: 0; /* Reset nav ul padding */
  margin: 0;
  border: none;
  border-top: 1px solid var(--border-color);
}
[data-theme="dark"] .dropdown-menu {
  background-color: rgba(255,255,255,0.02);
}

.dropdown-menu.show {
  display: block;
}

.dropdown-menu a { /* Styles for items within .dropdown-menu */
  padding-left: 2.5rem !important; /* Indent sub-items */
  font-size: 0.85rem;
  font-weight: 400;
  /* Hover styles are inherited and then slightly modified if needed */
}

.dropdown > a { /* The parent <a> that triggers the dropdown */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dropdown > a .fa-caret-down { /* Assuming FontAwesome caret in HTML */
  margin-left: 8px; /* Space for caret in RTL */
  transition: transform var(--transition-smooth);
  font-size: 0.8em; /* Make caret slightly smaller */
}

.dropdown > a[aria-expanded="true"] .fa-caret-down {
  transform: rotate(-180deg);
}

/* Footer */
footer {
  background: var(--nav-bg);
  color: var(--text-on-primary); /* This needs nav-bg to be dark for light text */
  text-align: center;
  padding: 2rem 1rem;
  margin-top: 3rem;
  position: relative;
  font-size: 0.9rem;
}
[data-theme="dark"] footer {
    color: var(--text-primary); /* Light text on dark footer */
}
footer p {
  margin: 0;
  opacity: 0.8;
}

/* Tablet and Desktop Styles */
@media (min-width: 768px) {
  body {
    font-size: 1rem; /* Maintain base */
  }
  
  .mobile-menu-btn {
    display: none;
  }
  
  nav {
    padding: 0 1.5rem; /* Horizontal padding for nav bar */
  }
  
  #main-menu { /* Reset mobile styles for desktop */
    position: static;
    max-height: none;
    flex-direction: row;
    background: transparent;
    box-shadow: none;
    justify-content: center;
    width: auto;
    margin: 0 auto;
    padding: 0;
    border-radius: 0;
  }
  
  nav ul { /* #main-menu */
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: auto;
    padding: 0; /* Reset */
  }
  
  nav ul li {
    width: auto;
    border-bottom: none;
    position: relative;
  }
  
  nav ul li a { /* Desktop top-level nav items */
    color: var(--text-on-primary); /* Text on nav bar (usually white/light) */
    [data-theme="dark"] & { /* Nested for specificity */
        color: var(--text-primary); /* Light text for dark theme nav */
    }
    padding: 1rem 1.25rem;
    font-weight: 500;
    border-bottom: none;
    position: relative;
    overflow: hidden; /* For advanced hover effects */
    transform: none; /* Reset mobile transform */
    background-color: transparent; /* Reset mobile hover */
  }
  nav ul li a::before { /* Underline hover effect */
    content: '';
    position: absolute;
    bottom: 6px;
    left: 50%;
    width: 0;
    height: 2px;
    background-color: var(--accent-light);
    transition: all var(--transition-smooth);
    transform: translateX(-50%);
  }
  nav ul li a:hover::before,
  nav ul li a:focus::before {
    width: 60%;
  }
  nav ul li a:hover,
  nav ul li a:focus {
    background-color: transparent; /* No bg change on hover for top level */
    color: var(--text-on-primary); /* Maintain color */
    [data-theme="dark"] & {
        color: var(--text-primary);
    }
  }

  /* Desktop Dropdowns */
  .dropdown:hover .dropdown-menu,
  .dropdown > a:focus + .dropdown-menu, /* Keyboard accessibility */
  .dropdown-menu:hover /* Keep open while hovering menu */
  {
    display: block;
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    transition-delay: 0s;
  }

  .dropdown-menu { /* The <ul> */
    position: absolute;
    top: calc(100% + 5px); /* Small gap */
    left: 0;
    min-width: 240px;
    background: var(--background-elevated);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    transform: translateY(10px);
    transition: opacity var(--transition-fast) ease-out, transform var(--transition-fast) ease-out, visibility 0s var(--transition-fast);
    visibility: hidden;
    transition-delay: 0.1s; /* Delay hiding */
    z-index: 1001;
    border: 1px solid var(--border-color);
    padding: 0.5rem 0;
  }
  
  .dropdown > a .fa-caret-down {
    color: inherit; /* Inherit color from parent <a> */
    opacity: 0.7;
  }
  
  .dropdown-menu li {
      width: 100%;
  }
  .dropdown-menu a { /* Items inside desktop dropdown */
    color: var(--text-primary) !important;
    padding: 0.75rem 1.25rem !important;
    display: flex !important;
    align-items: center;
    background-color: transparent !important;
    font-weight: 400;
    transition: background-color var(--transition-fast), color var(--transition-fast), transform var(--transition-fast);
  }
  .dropdown-menu a:hover,
  .dropdown-menu a:focus {
    background-color: rgba(var(--primary-rgb), 0.1) !important;
    color: var(--primary-color) !important;
    transform: translateX(5px) !important;
  }
  .dropdown-menu a::before { /* Remove parent's hover underline */
      display: none !important;
  }
  
  section {
    padding: 2.5rem;
    margin-bottom: 3rem;
  }
  section:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  h2 {
    font-size: clamp(1.6rem, 3vw, 2rem);
  }
  
  /* Desktop form input adjustments (if any beyond general input styling) */
  form input,
  form select,
  form textarea {
    /* Padding and margin are already set well for responsiveness */
  }
  
  form button[type="submit"] {
    width: auto; 
    min-width: 220px; 
    margin: calc(var(--spacing-unit) * 4) auto 0; /* 1rem auto 0 */
  }

  .popup-content {
    padding: 2rem 2.5rem;
  }
  
  .cabinet-photo:hover {
    transform: scale(1.03);
    box-shadow: var(--shadow-xl);
  }
  
  footer {
    padding: 2.5rem 1rem;
    margin-top: 4rem;
  }
}

/* Large Desktop Screens */
@media (min-width: 1200px) {
  .container {
    width: 80%;
    max-width: 1100px;
  }
  header {
    padding: 4rem 1rem 3rem;
  }
  section {
    padding: 3rem;
  }
}

/* Print Styles */
@media print {
  :root { /* Force light theme for printing */
    --primary-color: #000000;
    --primary-dark: #000000;
    --accent-color: #000000;
    --text-primary: #000000;
    --text-secondary: #333333;
    --text-on-primary: #000000;
    --background-body: #ffffff;
    --background-card: #ffffff;
    --background-elevated: #ffffff;
    --border-color: #cccccc;
    --header-gradient: none;
    --nav-bg: #ffffff;
    --shadow-xs: none; --shadow-sm: none; --shadow-md: none; --shadow-lg: none; --shadow-xl: none; --shadow-inner: none;
  }
  [data-theme="dark"] { /* Override dark theme for print */
    --primary-color: #000000; --primary-dark: #000000; --accent-color: #000000;
    --text-primary: #000000; --text-secondary: #333333; --text-on-primary: #000000;
    --background-body: #ffffff; --background-card: #ffffff; --background-elevated: #ffffff;
    --border-color: #cccccc;
    --header-gradient: none; --nav-bg: #ffffff;
    --shadow-xs: none; --shadow-sm: none; --shadow-md: none; --shadow-lg: none; --shadow-xl: none; --shadow-inner: none;
  }

  body {
    background-color: var(--background-body) !important;
    color: var(--text-primary) !important;
    font-size: 11pt !important;
    font-family: 'Times New Roman', Times, serif !important;
    line-height: 1.4 !important;
  }
  
  nav, #theme-toggle, .mobile-menu-btn, .popup-overlay, footer, .map-container, #google_translate_element {
    display: none !important;
  }
  form button[type="submit"] { /* Hide submit button usually */
      display: none !important;
  }
  
  header {
    background: var(--background-body) !important;
    color: var(--text-primary) !important;
    box-shadow: none !important;
    padding: 0.5cm 0 !important;
    margin-bottom: 1cm !important;
    border-bottom: 1px solid var(--border-color) !important;
    text-align: left !important;
  }
  header h1 {
    font-size: 16pt !important;
    text-shadow: none !important;
  }

  section {
    background: var(--background-body) !important;
    color: var(--text-primary) !important;
    box-shadow: none !important;
    padding: 0 !important;
    margin-bottom: 1cm !important;
    border: none !important;
  }
  section h2 {
    font-size: 14pt !important;
    border-bottom: 1px solid var(--border-color) !important;
    color: var(--text-primary) !important;
  }
  
  .container { width: 100% !important; max-width: none !important; padding: 0 !important; }
  
  a { color: #0000FF !important; text-decoration: underline !important; }
  a[href^="http"]:after { content: " (" attr(href) ")"; font-size: 0.8em; }
  a[href^="#"]:after, a[href^="tel:"]:after, a[href^="mailto:"]:after { content: "" !important; }

  img, .cabinet-photo {
    max-width: 80% !important; /* Constrain image size */
    height: auto !important;
    page-break-inside: avoid;
    border: 1px solid var(--border-color) !important;
    box-shadow: none !important;
    display: block;
    margin: 1em auto;
  }
  
  form { padding: 0 !important; }
  form label { font-size: 10pt; }
  form input, form select, form textarea {
      border: 1px solid #999 !important;
      background-color: #f9f9f9 !important;
      padding: 4px !important;
      font-size: 10pt;
      color: black !important;
      -webkit-print-color-adjust: exact; /* Try to force background colors for fields */
      print-color-adjust: exact;
  }
  
  section, form, ul, ol, .cabinet-photo, #appointment-details { page-break-inside: avoid; }
  h1, h2, h3, h4, h5, h6 { page-break-after: avoid; }
  p { orphans: 3; widows: 3; }
}

/* About Section Styles */
.about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.about-header {
    text-align: center;
    margin-bottom: 3rem;
}

.about-header h2 {
    font-size: 2.2rem;
    color: var(--text-color);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
}

.about-header h2 i {
    color: var(--primary-color);
}

.section-divider {
    position: relative;
    height: 2px;
    background: linear-gradient(to right, transparent, var(--primary-color), transparent);
    margin: 2rem auto;
