    align-items: center;
    justify-content: center;
}

.card-icon i {
    font-size: 1.5rem;
    color: var(--primary-color);
}

.card-content {
    flex: 1;
}

.card-content h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--text-color);
}

.universities-list,
.achievements-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.universities-list li,
.achievements-list li {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    margin-bottom: 0.8rem;
    color: var(--text-secondary);
}

.universities-list li i,
.achievements-list li i {
    color: var(--primary-color);
    font-size: 1rem;
}

/* Responsive Design */
@media (max-width: 992px) {
    .doctor-profile {
        grid-template-columns: 1fr;
    }

    .profile-image {
        max-width: 400px;
        margin: 0 auto;
    }

    .experience-badge {
        right: 20px;
    }
}

@media (max-width: 768px) {
    .about-container {
        padding: 1rem;
    }

    .qualification-card,
    .experience-card {
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 1.5rem;
