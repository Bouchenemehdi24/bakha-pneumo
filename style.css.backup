}

.profile-details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.qualification-card,
.experience-card {
    background: var(--bg-color);
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    display: flex;
    gap: 1.5rem;
    transition: transform 0.3s ease;
}

.qualification-card:hover,
.experience-card:hover {
