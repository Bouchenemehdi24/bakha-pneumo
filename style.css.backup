/* Optional: Custom Scrollbar for Webkit browsers */
::-webkit-scrollbar {
  width: 10px; /* Slightly wider for easier grabbing */
  height: 10px;
}
::-webkit-scrollbar-track {
  background: var(--background-body);
  border-radius: var(--border-radius-full);
}
::-webkit-scrollbar-thumb {
  background: var(--text-secondary);
  border-radius: var(--border-radius-full);
  border: 2px solid var(--background-body); /* Creates a "padding" effect */
}
::-webkit-scrollbar-thumb:hover {
  background: var(--primary-color);
}

/* Watermark Style */
.watermark {
  position: fixed;
  bottom: 10px;
  right: 10px; /* Or left: 10px for LTR */
  font-size: 0.75rem;
  color: var(--text-secondary);
  opacity: 0.5;
  z-index: 3000; /* High z-index */
  pointer-events: none; /* So it doesn't interfere with clicks */
  font-family: var(--font-sans);
}
@media print {
  .watermark { display: none !important; }
}

/* Dark Mode Toggle Button */
#theme-toggle {
  position: fixed;
  top: 1rem;
  right: 1rem; /* Adjust if it clashes with other elements like mobile menu */
  background-color: var(--background-card);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-full);
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  box-shadow: var(--shadow-md);
  transition: var(--transition-smooth);
  z-index: 1060; /* Above most things */
}
#theme-toggle:hover {
  background-color: var(--primary-light);
  color: var(--text-on-primary);
  border-color: var(--primary-light);
}
[data-theme="dark"] #theme-toggle:hover {
    background-color: var(--primary-dark);
    color: var(--text-on-primary);
    border-color: var(--primary-dark);
}
#theme-toggle i {
  font-size: 1.2rem;
}
@media (max-width: 767px) { /* Position differently on mobile if nav is full width */
    #theme-toggle {
        top: calc(0.5rem + 10px); /* Align with nav items if mobile nav is fixed height */
        right: calc(1rem + 50px); /* Next to hamburger menu if hamburger is on right */
        /* If hamburger is on left, right: 1rem; is fine */
    }
}

/* Language Selector Styles */
.language-selector {
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 1000;
    background: var(--background-card);
    padding: 0.5rem;
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
}

/* Google Translate Element Customization */
.goog-te-gadget {
    font-family: var(--font-sans) !important;
    font-size: 0.9rem !important;
    color: var(--text-primary) !important;
