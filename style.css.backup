}

.doctor-photo:hover {
    transform: translateY(-5px);
}

.experience-badge {
    position: absolute;
    bottom: 20px;
    right: -20px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
