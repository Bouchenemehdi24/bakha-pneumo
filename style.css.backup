    color: var(--text-light) !important;
}

[data-theme="dark"] .goog-te-gadget-simple {
    background-color: var(--background-elevated) !important;
    border-color: rgba(255, 255, 255, 0.1) !important;
}

[data-theme="dark"] .goog-te-menu-value span {
