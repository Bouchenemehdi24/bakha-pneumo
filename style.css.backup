/* Modern & Elegant Styles - Revision */

:root {
  --primary-color: #3b82f6; /* Tailwind Blue 500 */
  --primary-dark: #1d4ed8;  /* Tailwind Blue 700 */
  --primary-light: #60a5fa; /* Tailwind Blue 400 */
  --primary-rgb: 59, 130, 246;

  --accent-color: #f59e0b;  /* Tailwind Amber 500 */
  --accent-dark: #d97706;   /* Tailwind Amber 600 */
  --accent-light: #fcd34d; /* Tailwind Amber 300 */
  --accent-rgb: 245, 158, 11;
  
  --text-primary: #1f2937;    /* Tailwind Gray 800 */
  --text-secondary: #4b5563;  /* Tailwind Gray 600 */
  --text-on-primary: #ffffff;
  --text-on-accent: #1f2937;
  --text-light: #f9fafb;      /* Tailwind Gray 50 */

  --background-body: #f3f4f6;   /* Tailwind Gray 100 - slightly off-white */
  --background-card: #ffffff;
  --background-elevated: #ffffff; /* For elements like dropdowns, popups */
  --background-input: #ffffff;

  --border-color: #e5e7eb;     /* Tailwind Gray 200 */
  --border-color-focus: var(--primary-color);

  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.03);
  --shadow-sm: 0 2px 4px -1px rgba(0, 0, 0, 0.04), 0 1px 2px -1px rgba(0, 0, 0, 0.03);
  --shadow-md: 0 4px 8px -2px rgba(0, 0, 0, 0.05), 0 2px 4px -2px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.07), 0 4px 6px -4px rgba(0, 0, 0, 0.06);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.08), 0 8px 10px -6px rgba(0, 0, 0, 0.07);
  --shadow-inner: inset 0 2px 4px 0 rgba(0,0,0,0.03);

  --header-gradient: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  --nav-bg: var(--primary-dark);
  --highlight-gradient: linear-gradient(135deg, var(--accent-light), var(--accent-color));
  
  --transition-fast: all 0.15s ease-in-out;
  --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-elastic: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);

  --border-radius-sm: 4px;
  --border-radius-md: 8px;
  --border-radius-lg: 12px;
  --border-radius-xl: 16px;
  --border-radius-full: 9999px;

  --font-sans: 'Inter', 'Noto Sans Arabic', sans-serif;
  /* --font-serif: 'Merriweather', 'Noto Serif Arabic', serif; */
  /* --font-mono: 'Fira Code', 'monospace'; */

  --spacing-unit: 0.25rem; /* 4px */

  /* Dark mode variables */
  --dark-background: #1a1a1a;
  --dark-surface: #2d2d2d;
  --dark-text: #e0e0e0;
  --dark-text-secondary: #a0a0a0;
  --dark-border: #404040;
}

[data-theme="dark"] {
  --primary-color: #60a5fa; 
  --primary-dark: #3b82f6;  
  --primary-light: #93c5fd; 
  --primary-rgb: 96, 165, 250;

  --accent-color: #fcd34d; 
  --accent-dark: #f59e0b;   
  --accent-light: #fef3c7; 
  --accent-rgb: 252, 211, 77;

  --text-primary: #f3f4f6;    
  --text-secondary: #9ca3af;  
  --text-on-primary: #0f172a; /* Darker text on light primary in dark mode */
  --text-on-accent: #1f2937;
  --text-light: #1f2937;      

  --background-body: #0f172a;   
  --background-card: #1e293b;   
  --background-elevated: #334155; 
  --background-input: #1e293b;


  --border-color: #334155;     
  --border-color-focus: var(--primary-color);

  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  --shadow-sm: 0 2px 4px -1px rgba(0, 0, 0, 0.12), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
  --shadow-md: 0 4px 8px -2px rgba(0, 0, 0, 0.15), 0 2px 4px -2px rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.2), 0 4px 6px -4px rgba(0, 0, 0, 0.15);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.25), 0 8px 10px -6px rgba(0, 0, 0, 0.2);
  --shadow-inner: inset 0 2px 4px 0 rgba(0,0,0,0.1);

  --header-gradient: linear-gradient(135deg, var(--primary-dark), #1e3a8a); 
  --nav-bg: #1e293b; 
  --highlight-gradient: linear-gradient(135deg, var(--accent-color), var(--accent-dark));
}

/* Base Styles */
body {
  background-color: var(--background-body);
  color: var(--text-primary);
  font-family: var(--font-sans);
  line-height: 1.6;
  transition: background-color var(--transition-smooth), color var(--transition-smooth);
  margin: 0;
  padding: 0;
  font-size: 1rem; /* 16px */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

/* Base theme styles */
body {
    background-color: var(--background-body);
    color: var(--text-color);
}

body header,
body nav,
body section,
body .popup-content {
    background-color: var(--background-color);
    color: var(--text-color);
}

body.dark-mode a {
    color: var(--primary-light);
}

body.dark-mode .dropdown-menu {
    background-color: var(--dark-surface);
    border-color: var(--dark-border);
}

body.dark-mode .dropdown-menu a {
    color: var(--dark-text);
}

body.dark-mode .dropdown-menu a:hover {
    background-color: var(--dark-background);
}

body.dark-mode input,
body.dark-mode select,
body.dark-mode textarea {
    background-color: var(--dark-background);
    color: var(--dark-text);
    border-color: var(--dark-border);
}

body.dark-mode button {
    background-color: var(--primary-dark);
    color: var(--dark-text);
}

body.dark-mode button:hover {
    background-color: var(--primary-color);
}

body.dark-mode .highlight {
    background-color: var(--dark-surface);
    border-color: var(--dark-border);
}

/* Base container */
#content-ar {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Main content structure */
main {
    flex: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    position: relative;
    z-index: 1;
}

.main-content {
    background: var(--background-card);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    padding: 2rem;
    margin-bottom: 2rem;
}

/* Fix stacking context */
.main-header {
    position: relative;
    z-index: 10;
}

.main-nav {
    position: relative;
    z-index: 9;
}

/* Container for consistent width */
.container { /* Use this class to wrap main content if consistent width is needed */
  width: 92%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Header */
header {
  background: var(--header-gradient);
  color: var(--text-on-primary);
  text-align: center;
  padding: 3rem 1rem 2.5rem;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-md);
  margin-bottom: 2rem;
}

header h1 {
  margin: 0 0 0.5rem 0;
  font-size: clamp(1.75rem, 6vw, 2.75rem);
  font-weight: 700;
  letter-spacing: -0.02em;
  line-height: 1.2;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
}

.subheader-text { /* This was the class for the paragraph under H1 in the HTML */
  font-size: clamp(0.9rem, 3.5vw, 1.15rem);
  opacity: 0.85;
  font-weight: 400;
  max-width: 700px;
  margin: 0 auto 1rem;
  line-height: 1.5;
}

/* Modern Header Styles */
.main-header {
    background: var(--bg-color);
    padding: 1rem 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
}

.header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
}

.clinic-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.logo-container {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid var(--primary-color);
    padding: 2px;
}

.clinic-logo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.clinic-title {
    display: flex;
    flex-direction: column;
}

.clinic-title h1 {
    font-size: 1.5rem;
    margin: 0;
    color: var(--text-color);
}

.clinic-subtitle {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0.2rem 0 0 0;
}

.clinic-status {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
    padding: 1rem;
    border-radius: 10px;
    background: rgba(var(--primary-color-rgb), 0.1);
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-indicator i {
    font-size: 0.8rem;
}

.status-indicator i.fa-circle {
    color: #e74c3c;
}

.clinic-status.open .status-indicator i.fa-circle {
    color: #2ecc71;
}

.next-opening {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* Navigation and Dropdown Styles */
nav {
    background: var(--nav-bg);
    padding: 1rem 0;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-md);
}

#main-menu {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
}

#main-menu > li {
    position: relative;
}

#main-menu a {
    color: var(--text-light);
    text-decoration: none;
    padding: 0.5rem 1rem;
    display: block;
    transition: var(--transition-fast);
}

#main-menu a:hover {
    color: var(--accent-light);
}

/* Dropdown styles */
.dropdown {
    position: relative;
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    min-width: 250px;
    background: var(--background-elevated);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    z-index: 1000;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
}

.dropdown-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

/* Dropdown menu items */
.dropdown-menu a {
    color: var(--text-primary);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    font-weight: 500;
}

.dropdown-menu a:hover {
    background-color: var(--primary-color);
    color: white !important;
}

/* Dark mode dropdown adjustments */
[data-theme="dark"] .dropdown-menu {
    background: var(--dark-surface);
    border-color: var(--dark-border);
}

[data-theme="dark"] .dropdown-menu a {
    color: var(--dark-text);
}

[data-theme="dark"] .dropdown-menu a:hover {
    background-color: var(--primary-color);
    color: white !important;
}

/* Mobile menu button */
.mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--text-light);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
}

/* Mobile styles */
@media (max-width: 768px) {
    .mobile-menu-btn {
        display: block;
        margin: 0 auto 1rem;
    }

    #main-menu {
        display: none;
        flex-direction: column;
        align-items: stretch;
        padding: 0 1rem;
    }

    #main-menu.active {
        display: flex;
    }

    #main-menu > li {
        width: 100%;
    }

    .dropdown-menu {
        position: static;
        width: 100%;
        opacity: 1;
        visibility: visible;
        transform: none;
        box-shadow: none;
        border: none;
        background: transparent;
        padding-right: 1.5rem;
        display: none;
    }

    .dropdown-menu.show {
        display: block;
    }

    .dropdown-menu a {
        color: var(--text-light) !important;
        padding: 0.5rem 1rem;
    }

    .dropdown-menu a:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--accent-light) !important;
    }
}

/* Responsive Design Fixes */
@media screen and (max-width: 768px) {
    .container {
        padding: 1rem;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .nav-item {
        margin: 0.5rem 0;
    }

    .card {
        margin: 1rem 0;
        width: 100%;
    }

    .grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
}

/* Fix any potential overflow issues */
* {
    max-width: 100%;
    box-sizing: border-box;
    word-wrap: break-word;
}

/* Ensure images are responsive */
img {
    max-width: 100%;
    height: auto;
    display: block;
}

/* Headings */
h2 {
  color: var(--primary-dark);
  font-size: clamp(1.4rem, 4vw, 1.75rem);
  font-weight: 600;
  margin-top: 0;
  margin-bottom: 1.5rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--border-color);
  position: relative;
}
[data-theme="dark"] h2 {
  color: var(--primary-light);
}

/* Images */
.cabinet-photo {
  width: 100%;
  max-width: 500px; 
  height: auto;
  border-radius: var(--border-radius-md);
  margin: 1rem auto 2rem;
  display: block;
  box-shadow: var(--shadow-lg);
  transition: transform var(--transition-smooth), box-shadow var(--transition-smooth);
  object-fit: cover;
  border: 1px solid var(--border-color);
}

/* Contact Section */
.contact-section {
    padding: 4rem 2rem;
    background: var(--background-card);
    margin: 2rem auto;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    max-width: 1200px;
}

.contact-content {
    max-width: 900px;
    margin: 0 auto;
}

.contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--background-elevated);
    border-radius: var(--border-radius-md);
    transition: var(--transition-smooth);
}

.contact-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.contact-item i {
    font-size: 1.5rem;
    color: var(--primary-color);
}

.contact-details h3 {
    margin-bottom: 0.5rem;
    color: var(--text-primary);
}

.contact-details p {
    color: var(--text-secondary);
    margin: 0.25rem 0;
}

.contact-details a {
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition-fast);
}

.contact-details a:hover {
    color: var(--primary-dark);
}

/* Appointment Section */
.appointment-section {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: var(--text-on-primary);
    margin: 2rem auto;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    max-width: 1200px;
}

.appointment-content {
    max-width: 600px;
    margin: 0 auto;
}

.appointment-content h2 {
    text-align: center;
    margin-bottom: 1rem;
}

.appointment-content p {
    text-align: center;
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.form-group input,
.form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--border-radius-md);
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-on-primary);
    font-size: 1rem;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--accent-color);
}

.submit-button {
    width: 100%;
    padding: 1rem;
    background: var(--accent-color);
    color: var(--text-on-accent);
    border: none;
    border-radius: var(--border-radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-smooth);
}

.submit-button:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
}

.success-message {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(46, 204, 113, 0.2);
    border: 1px solid rgba(46, 204, 113, 0.4);
    border-radius: var(--border-radius-md);
    text-align: center;
    color: var(--text-on-primary);
}

/* Mobile Responsiveness */
@media screen and (max-width: 768px) {
    .contact-section,
    .appointment-section {
        padding: 2rem 1rem;
        margin: 1rem;
    }

    .contact-item {
        padding: 1rem;
    }

    .form-group input,
    .form-group select,
    .submit-button {
        padding: 0.75rem;
    }
}

/* Tablet and Desktop Styles */
@media (min-width: 768px) {
  body {
    font-size: 1rem; /* Maintain base */
  }
  
  .mobile-menu-btn {
    display: none;
  }
  
  nav {
    padding: 0 1.5rem; /* Horizontal padding for nav bar */
  }
  
  #main-menu { /* Reset mobile styles for desktop */
    position: static;
    max-height: none;
    flex-direction: row;
    background: transparent;
    box-shadow: none;
    justify-content: center;
    width: auto;
    margin: 0 auto;
    padding: 0;
    border-radius: 0;
  }
  
  nav ul { /* #main-menu */
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: auto;
    padding: 0; /* Reset */
  }
  
  nav ul li {
    width: auto;
    border-bottom: none;
    position: relative;
  }
  
  nav ul li a { /* Desktop top-level nav items */
    color: var(--text-on-primary); /* Text on nav bar (usually white/light) */
    [data-theme="dark"] & { /* Nested for specificity */
        color: var(--text-primary); /* Light text for dark theme nav */
    }
    padding: 1rem 1.25rem;
    font-weight: 500;
    border-bottom: none;
    position: relative;
    overflow: hidden; /* For advanced hover effects */
    transform: none; /* Reset mobile transform */
    background-color: transparent; /* Reset mobile hover */
  }
  nav ul li a::before { /* Underline hover effect */
    content: '';
    position: absolute;
    bottom: 6px;
    left: 50%;
    width: 0;
    height: 2px;
    background-color: var(--accent-light);
    transition: all var(--transition-smooth);
    transform: translateX(-50%);
  }
  nav ul li a:hover::before,
  nav ul li a:focus::before {
    width: 60%;
  }
  nav ul li a:hover,
  nav ul li a:focus {
    background-color: transparent; /* No bg change on hover for top level */
    color: var(--text-on-primary); /* Maintain color */
    [data-theme="dark"] & {
        color: var(--text-primary);
    }
  }

  /* Desktop Dropdowns */
  .dropdown:hover .dropdown-menu,
  .dropdown > a:focus + .dropdown-menu, /* Keyboard accessibility */
  .dropdown-menu:hover /* Keep open while hovering menu */
  {
    display: block;
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    transition-delay: 0s;
  }

  .dropdown-menu { /* The <ul> */
    position: absolute;
    top: calc(100% + 5px); /* Small gap */
    left: 0;
    min-width: 240px;
    background: var(--background-elevated);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    transform: translateY(10px);
    transition: opacity var(--transition-fast) ease-out, transform var(--transition-fast) ease-out, visibility 0s var(--transition-fast);
    visibility: hidden;
    transition-delay: 0.1s; /* Delay hiding */
    z-index: 1001;
    border: 1px solid var(--border-color);
    padding: 0.5rem 0;
  }
  
  .dropdown > a .fa-caret-down {
    color: inherit; /* Inherit color from parent <a> */
    opacity: 0.7;
  }
  
  .dropdown-menu li {
      width: 100%;
  }
  .dropdown-menu a { /* Items inside desktop dropdown */
    color: var(--text-primary) !important;
    padding: 0.75rem 1.25rem !important;
    display: flex !important;
    align-items: center;
    background-color: transparent !important;
    font-weight: 400;
    transition: background-color var(--transition-fast), color var(--transition-fast), transform var(--transition-fast);
  }
  .dropdown-menu a:hover,
  .dropdown-menu a:focus {
    background-color: rgba(var(--primary-rgb), 0.1) !important;
    color: var(--primary-color) !important;
    transform: translateX(5px) !important;
  }
  .dropdown-menu a::before { /* Remove parent's hover underline */
      display: none !important;
  }
  
  section {
    padding: 2.5rem;
    margin-bottom: 3rem;
  }
  section:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  h2 {
    font-size: clamp(1.6rem, 3vw, 2rem);
  }
  
  /* Desktop form input adjustments (if any beyond general input styling) */
  form input,
  form select,
  form textarea {
    /* Padding and margin are already set well for responsiveness */
  }
  
  form button[type="submit"] {
    width: auto; 
    min-width: 220px; 
    margin: calc(var(--spacing-unit) * 4) auto 0; /* 1rem auto 0 */
  }

  .popup-content {
    padding: 2rem 2.5rem;
  }
  
  .cabinet-photo:hover {
    transform: scale(1.03);
    box-shadow: var(--shadow-xl);
  }
  
  footer {
    padding: 2.5rem 1rem;
    margin-top: 4rem;
  }
}

/* Large Desktop Screens */
@media (min-width: 1200px) {
  .container {
    width: 80%;
    max-width: 1100px;
  }
  header {
    padding: 4rem 1rem 3rem;
  }
  section {
    padding: 3rem;
  }
}

/* Print Styles */
@media print {
  :root { /* Force light theme for printing */
    --primary-color: #000000;
    --primary-dark: #000000;
    --accent-color: #000000;
    --text-primary: #000000;
    --text-secondary: #333333;
    --text-on-primary: #000000;
    --background-body: #ffffff;
    --background-card: #ffffff;
    --background-elevated: #ffffff;
    --border-color: #cccccc;
    --header-gradient: none;
    --nav-bg: #ffffff;
    --shadow-xs: none; --shadow-sm: none; --shadow-md: none; --shadow-lg: none; --shadow-xl: none; --shadow-inner: none;
  }
  [data-theme="dark"] { /* Override dark theme for print */
    --primary-color: #000000; --primary-dark: #000000; --accent-color: #000000;
    --text-primary: #000000; --text-secondary: #333333; --text-on-primary: #000000;
    --background-body: #ffffff; --background-card: #ffffff; --background-elevated: #ffffff;
    --border-color: #cccccc;
    --header-gradient: none; --nav-bg: #ffffff;
    --shadow-xs: none; --shadow-sm: none; --shadow-md: none; --shadow-lg: none; --shadow-xl: none; --shadow-inner: none;
  }

  body {
    background-color: var(--background-body) !important;
    color: var(--text-primary) !important;
    font-size: 11pt !important;
    font-family: 'Times New Roman', Times, serif !important;
    line-height: 1.4 !important;
  }
  
  nav, #theme-toggle, .mobile-menu-btn, .popup-overlay, footer, .map-container, #google_translate_element {
    display: none !important;
  }
  form button[type="submit"] { /* Hide submit button usually */
      display: none !important;
  }
  
  header {
    background: var(--background-body) !important;
    color: var(--text-primary) !important;
    box-shadow: none !important;
    padding: 0.5cm 0 !important;
    margin-bottom: 1cm !important;
    border-bottom: 1px solid var(--border-color) !important;
    text-align: left !important;
  }
  header h1 {
    font-size: 16pt !important;
    text-shadow: none !important;
  }

  section {
    background: var(--background-body) !important;
    color: var(--text-primary) !important;
    box-shadow: none !important;
    padding: 0 !important;
    margin-bottom: 1cm !important;
    border: none !important;
  }
  section h2 {
    font-size: 14pt !important;
    border-bottom: 1px solid var(--border-color) !important;
    color: var(--text-primary) !important;
  }
  
  .container { width: 100% !important; max-width: none !important; padding: 0 !important; }
  
  a { color: #0000FF !important; text-decoration: underline !important; }
  a[href^="http"]:after { content: " (" attr(href) ")"; font-size: 0.8em; }
  a[href^="#"]:after, a[href^="tel:"]:after, a[href^="mailto:"]:after { content: "" !important; }

  img, .cabinet-photo {
    max-width: 80% !important; /* Constrain image size */
    height: auto !important;
    page-break-inside: avoid;
    border: 1px solid var(--border-color) !important;
    box-shadow: none !important;
    display: block;
    margin: 1em auto;
  }
  
  form { padding: 0 !important; }
  form label { font-size: 10pt; }
  form input, form select, form textarea {
      border: 1px solid #999 !important;
      background-color: #f9f9f9 !important;
      padding: 4px !important;
      font-size: 10pt;
      color: black !important;
      -webkit-print-color-adjust: exact; /* Try to force background colors for fields */
      print-color-adjust: exact;
  }
  
  section, form, ul, ol, .cabinet-photo, #appointment-details { page-break-inside: avoid; }
  h1, h2, h3, h4, h5, h6 { page-break-after: avoid; }
  p { orphans: 3; widows: 3; }
}

/* About Section Styles */
.about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.about-header {
    text-align: center;
    margin-bottom: 3rem;
}

.about-header h2 {
    font-size: 2.2rem;
    color: var(--text-color);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
}

.about-header h2 i {
    color: var(--primary-color);
}

.section-divider {
    position: relative;
    height: 2px;
    background: linear-gradient(to right, transparent, var(--primary-color), transparent);
    margin: 2rem auto;
    width: 200px;
}

.divider-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
